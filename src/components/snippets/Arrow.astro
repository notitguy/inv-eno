---
interface Props {
  small?: boolean;
}
const { small = false } = Astro.props;
---
<div class:list={[ "arrow", {small}]}>
  <div class="arrow__body"></div>
  <div class="arrow__head"></div>
  <div class="arrow__circle"></div>
</div>

<style is:global>
  /* assuming arrow is inside an <a> */
  a:hover .arrow__body::before {
      animation-name: arrowBody;
    }
  a:hover .arrow__head {
    animation-name: arrowHead;
  }
  a:hover .arrow__circle {
    animation-name: ping;
  }
  ul.mobile a .arrow {
    transition: opacity 0.6s ease-in;
  }
  ul.mobile a:not(:hover) .arrow {
    opacity: 0;
  }
</style>

<style>

  .arrow {
    display: flex;
    align-items: center;
    position: relative;
    padding-right: 1rem;
    --c-arrow: var(--c-primary);
    /* --easing: cubic-bezier(1, 0, 0, 1); */

    &.small {
      transform: scale(0.8);
    }

    & * {
      /* animation-duration: 0.6s; */
      animation-timing-function: var(--easing);
    }

    & .arrow__body {
      position: relative;
      
      &::before {
        content: '';
        display: block;
        width: 100px;
        height: 1px;
        background-color: var(--c-arrow);
        animation-duration: 0.6s;
        animation-timing-function: var(--easing);
      }
    }
    & .arrow__head {
        animation-duration: 0.7s;

      &::after {
        content: '';
        display: block;
        width: 12px;
        height: 12px;
        margin-left: -12px;
        border-top: 1px solid var(--c-arrow);
        border-right: 1px solid var(--c-arrow);
        transform: rotate(45deg);
      }
    }
    & .arrow__circle {
        position: absolute;
        right: -4px;
        top: -22px;
        width: 3.4rem;
        height: 3.4rem;
        border: 1px solid var(--c-arrow);
        border-radius: 50%;
        animation-duration: 0.6s;
      }
  }
  
  @keyframes arrowBody {
    0% {
      transform-origin: 100% 0%;
      transform: scale(1, 1);
    }
    50% {
      transform-origin: 100% 0%;
      transform: scale(0, 1);
    }
    50.1% {
      transform-origin: 0% 0%;
      transform: scale(0, 1);
    }
    100% {
      transform-origin: 0% 0%;
      transform: scale(1, 1);
    }
  }
  @keyframes arrowHead {
    0% {
      transform: scale3d(1,1,1);
    }
    50% {
      transform: scale3d(0,0,0);
    }
    100% {
      transform: scale3d(1,1,1);
    }
  }
  /* https://animista.net */
  @keyframes ping {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.5);
      opacity: 0;
    }
    80% {
      transform: scale(1.2);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 0.8;
    }
  }

</style>