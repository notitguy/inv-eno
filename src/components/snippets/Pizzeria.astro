---
import Arrow from "./Arrow.astro";
const pizzeriaPhoto = 'https://pizza.invitaly.cz/assets/img/food/140422/21-03Invitaly_10.jpg'
---

<section class="pizzeria">
  <h3 class="small">Invitaly Piazzetta</h3>
  <p>Visit our pizzera to taste delicious Italian pizzas.</p>
  <a href="https://pizza.invitaly.cz">
    <div class="link">
      <p>Go to pizzeria</p>
      <Arrow small />
    </div>
    <div class="zoom observe">
      <img src={pizzeriaPhoto} alt="Invitaly Pizza" width="200">
    </div>
  </a>
</section>

<style>
  
  .pizzeria {
    display: flex;
    flex-direction: column;

    & .link {
      display: flex;
      align-items: center;
      margin-bottom: var(--gutter);

      & p {
        font-weight: 600;
        margin: 0;
      }
    }
    & .zoom {
      display: grid;
      place-content: center;
      max-height: 15rem;

      & img {
        width: auto;
      }
    }
  }

</style>