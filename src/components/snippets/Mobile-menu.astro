      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.7);
      transform: translateX(100%);
      translate: 100%;

    &.mobile-menu--open {
      opacity: 1;
      transform: translateX(0);
      translate: 0;
    }
  } */
  
</style>

<script>
  // Mobile menu
  const menuElements = document.querySelectorAll('.burger, .overlay, .mobile-menu .grid a');
  const overlay = document.querySelectorAll('body, .overlay, .grid');

  menuElements.forEach(item => {
    item.addEventListener('click', () => {
      for (const el of overlay) {
        el.classList.toggle('mobile-menu--open');
      }
    })
  })
  
</script>