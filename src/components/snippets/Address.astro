---
import { t } from "i18next";

import globals from '@assets/js/globals.json';
import iconInstagram from '@assets/img/icon/instagram.svg';
import Logo from "./Logo.astro";

const { pathname } = Astro.url;

interface Props {
  instagram?: boolean;
}
const { 
  instagram = false,
} = Astro.props;
---
<section>
  <a href={pathname}>
    <Logo />
  </a>
  <h3 class="small">{globals.name}</h3>
  <address>
    <ul>
      <li>{globals.address} <br>
      (<a href={globals.mapUrl} target="_blank" id="mapClick"> {t("address.mapText")} üìç</a>)
      </li>
      <li>
        <a href={`tel:${globals.phone}`} target="_blank" id="callClick">{globals.phone}</a>
      </li>
      <li>
        <a href={`mailto:${globals.email}`} target="_blank" id="emailClick">{globals.email}</a>
      </li>
    </ul>
    { instagram && <a href={globals.instagram} target="_blank" class="social-link" id="instagramClick">
      <img src={iconInstagram} alt="Invitaly instagram" width="28" height="28">
    </a> }
  </address>
</section>

<style>

  section {
    display: flex;
    flex-direction: column;
  }
  h3, .social-link {
    margin-top: var(--gutter);
  }
  :global(.social-link) {
    display: flex;
    gap: 1rem;
    line-height: 1.5;
  }
</style>