---
import Reservation from "./snippets/Reservation.astro";
import Address from "./snippets/Address.astro";
---

<footer class="grid" id="footer">
  <Reservation visible />
  <Address />
</footer>

<style>
  @media (width < 1025px) {
    footer.grid {
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 30ch), 1fr));
    }
  }
</style>